MQTT_HOST=mqtt
MQTT_PORT=1883
MQTT_USERNAME=worker
MQTT_CLIENT_ID=worker

# Worker Control - Choose one approach:
# Option 1: Enable only specific props (recommended)
# WORKER_PROPS_ALLOW=tesla_hue_nest

# Option 2: Disable specific props (uncomment to use instead)
# WORKER_PROPS_DISABLE=example_prop,thriller_hue_nest

# Option 3: Disable all props (uncomment to use instead)
# WORKER_DISABLE_ALL_PROPS=1

# Built-in worker control (optional)
# WORKER_BUILTINS_DISABLE=heartbeat